@{
    ViewBag.Title = "Products";
}
@Html.ActionLink("Create", "New")
<h2>
    Product List</h2>
<table>
    <tbody>
        @foreach (var item in ViewBag.Products)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Price
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @if (item.Category != null)
                    {
                        @item.Category.Name    
                    }
                </td>
                <td>
                   @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) 
                </td>
                <td>
                   @Html.ActionLink("Delete", "Delete", new { id = item.Id }) 
                </td>
            </tr>
        }
    </tbody>
</table>

